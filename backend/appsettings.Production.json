{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/misionmaestra.db"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyForMisionMaestraProduction",
    "Issuer": "MisionMaestra",
    "Audience": "MisionMaestraApp",
    "ExpirationInMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://yourdomain.com",
      "https://www.yourdomain.com"
    ]
  },
  "SignalR": {
    "HubUrl": "/hub/mision-maestra"
  },
  "FileUpload": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"]
  },
  "RateLimiting": {
    "Enable": true,
    "MaxRequests": 100,
    "WindowInSeconds": 60
  }
}